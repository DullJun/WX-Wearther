/* pages/life/life.wxss */

.main{
  font-size: 16px;
  color: #fff;
  background-color:#3E8ACE;
}
.main .top{
  width: 100vw;
   margin-top: 7px;
  margin-bottom: 5px;
  background-color: rgba(155, 155, 155, 0.2);
}
.main .top .nav{
  margin: 0 35%;
  width: 30%;
}
.main .top .nav text:first-child{
  font-size: 18px;
}
.main .top .nav text:last-child{
  font-size: 12px;
}
.main .top .nav image{
  width: 20px;
  height: 20px;
}
.main .life{
  text-indent: 2em;
   margin-top: 7px;
  margin-bottom: 5px;
  background-color: rgba(144, 144, 144, 0.2);
}
.main .suggestion{
  margin-top: 7px;
  margin-bottom: 7px;
  background-color: rgba(155, 155, 155, 0.2);
}
.main .suggestion .item {
  text-indent: 2em;
  font-size: 14px;
  border-bottom: 1px solid rgba(222, 222, 222, 0.3);
  margin-bottom: 5px;
  padding-bottom: 3px;
}
.main .suggestion .item .brf{
  text-indent: 0em;
}