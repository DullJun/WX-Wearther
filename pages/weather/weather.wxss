/* pages/weather/weather.wxss */

.main {
  width: 100%;
  /* height: 165vh; */
  /* background-color: yellow; */
  color: #fff;
  min-height: 100vh;
  font-size: 16px;
}

.main .container {
  width: 100%;
  min-height: 100vh;
  background-image: url('http://cn.bing.com/az/hprichbg/rb/Apollo15Composite_EN-US10046867284_1920x1080.jpg');
}

.main .container .top {
  /* height: 38vh; */ 
  width: 100%;
  /* background-color: red; */
}

.main .container .top .nav {
  width: 100%;
  background-color: rgba(155, 155, 155, 0.3);
  border-bottom: 1px solid rgba(155, 155, 155, 0.4);
}

.main .container .top .nav .address {
  width: 43px;
  margin: 0 24%;
  font-size: 18px;
}

.main .container .top .nav text:first-child {
  font-size: 10px;
}

.main .container .top .now{
  margin-top: 5px;
  background-color: rgba(155, 155, 155, 0.3);
  height: 100%;
}
.main .container .top .now .status{
  width: 100%;
}
.main .container .top .now .status image{
  width: 81px;
  height: 81px;
}
.main .container .top .now .status text:first-child{
  font-size: 52px;
  margin: 0 5px;
}
.main .container .top .now .sun{
  margin-top: 7px;
  font-size: 12px;
}
.main .container .top .now .sun text{
  margin-right: 7px;
}

.main .container .top .now .life{
  font-size: 14px;
  margin-top: 5px;
  margin-bottom: 7px;
}
.main .container .forecast{
  width: 100%;
  /* height: 15vh; */
  background-color: rgba(155, 155, 155, 0.3);
  margin: 13px 0;
  font-size: 14px;
   display: flex; 
   padding: 7px 0;
}
.main .container .forecast view{
  flex-basis: 50%;
  text-align: centerï¼›
}
.main .container .forecast view:nth-of-type(2){
  background-color: rgba(155, 155, 155, 0.4);
  flex-basis: 1px; 
}
.main .container .forecast view view{
  width: 100%;
}
.main .container .forecast view view text{
  width: 100%;
  display: block;
  text-align: center;
}
.main .container .hourly_forecast{
  background-color: rgba(155, 155, 155, 0.3);
  overflow-x: scroll;
  overflow-y: hidden;
  -webkit-overflow-scrolling: touch; 
  display: flex;
}
.main .container .hourly_forecast .item{
  text-align: center;
  /* border-left: 1px solid rgba(155, 155, 155, 0.4); */
  border-right: 1px solid rgba(144, 144, 144, 0.4);
  padding: 5px 7px;
  flex-basis: 120px;
  -webkit-flex-basis: 120px;
}

.main .container .hourly_forecast .item view{
  margin: 7px 3px;
  width: 22vw;
}


/* .main .container .hourly_forecast canvas{
  height: 100%;
   width: 200vw; 
} */

.main .container .day_forecast{
  width: 100%;
  font-size: 14px;
  background-color: rgba(155, 155, 155, 0.3);
  margin-top: 7px;
  margin-bottom: 7px;
}
.main .container .day_forecast .day_info{
  display: flex;
  width: 100vw;
}
.main .container .day_forecast .day_info view{
  flex-basis: 20vw;
  text-align: center;
  overflow-x: hidden;
  overflow-y: hidden;
  border-bottom: 1px solid rgba(155, 155, 155, 0.5);
  margin-top: 3px;
}
.main .container .day_forecast .day_info view image{
  width: 30px;
  height: 30px;
}
